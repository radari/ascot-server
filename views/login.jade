extends layout

prepend head
  link(rel='stylesheet', href='/stylesheets/login.css')
  script
    $(document).ready(function() {
      $('form.register').hide();
      $("#signUp").click(
        function(event) {
          event.preventDefault();
          $('form.login').fadeOut(10);
          $('form.register').fadeIn(500);
        });
    });

block content
  h3.list_header Sign in to Ascot
  br
  include partials/_login.jade
  br
  - if (message)
    div.loginError
      | #{message}
