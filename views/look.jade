extends layout

prepend head
  script(src='/javascripts/display_image.js')
  link(rel='stylesheet', href='/stylesheets/ascot_overlay.css')
  link(rel='stylesheet', href='/stylesheets/ascot_look.css')
  
  meta( property="og:type",
        content="website")
  meta( property="og:image",
        content="#{look.url}")
  meta( property="og:image:width"
        content="600")
  meta( property="og:image:height"
        content="400")


block content

  div.look-container(ng-init="look = #{JSON.stringify(look)}")
    include partials/_look.jade
    
    a(target='_blank', ng-href='http://www.tumblr.com/share/photo?source={{"#{look.url}#ascot=#{look._id}" | encodeURIComponent}}&clickthru={{"http://www.ascotproject.com/look/#{look._id}" | encodeURIComponent}}&caption={{look | htmlifyTags | encodeURIComponent}}') Tumblr

    include partials/_iframe_input.jade
