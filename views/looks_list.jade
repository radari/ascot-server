extends looks_list_base

block list_header
  h2.list_header
    | #{listTitle}

block list_element
  a(ng-href="#{route}/{{look._id}}")
    img(ng-src="{{look.url}}",
        ng-style="{ height : computeHeight(look), 'background-color' : '#A3A3A3' }")