extends looks_list_base

block list_header
  h3.list_header
    | #{listTitle}

block list_element
  a(ng-href="#{route}/{{look._id}}")
    img(ng-src="{{look.thumbnail | checkEmpty:look.url}}#ascot={{look._id}}",
        id="ascot_{{look._id}}",
        ng-init="setUpPlugin(look._id);",
        ng-style="{ height : computeHeight(look), 'background-color' : '#A3A3A3' }")