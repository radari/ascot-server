extends layout

prepend head
  script(type="text/javascript"
         src="http://code.jquery.com/jquery-1.8.2.js")
  script(type="text/javascript"
         src="/javascript/TaggerPut.js")
  link(rel='stylesheet', href='/stylesheets/taggerPut.css')


block content
  
  div#look
    img(src="#{look.url}", class="uploadedImg")
          
    div#overlay
      input(type="text", value="", id="productSearch")   
      input(type="submit", id="add_tag", value="Add")
 

  textarea(id="json_content")
  input(type="text", value="#{key}", id="myKey")
  input(type="text", value="#{look._id}", id="myId")
  input(type="submit", id="json_content_submit", value="Save")
