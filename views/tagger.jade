extends layout

prepend head
  script(type="text/javascript"
         src="http://code.jquery.com/jquery-1.8.2.js")
  script(type="text/javascript"
         src="/vendor/autocomplete/jquery.autocomplete.js")
  script(type="text/javascript"
         src="/javascript/TaggerPut.js")
  link(rel='stylesheet', href='/stylesheets/taggerPut.css')


block content
  
  div#look
    img(src="#{look.url}", class="uploadedImg", ascot="#{look._id}", ascot_key="#{key}")
          
    div#overlay
      input(type="text", value="", id="productSearch")   
