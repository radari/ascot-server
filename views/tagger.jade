extends layout

prepend head
  script(src="/javascripts/TaggerPut.js")
  link(rel='stylesheet', href='/stylesheets/taggerPut.css')


block content

  div.look-container
    div#look
      img(src="#{look.url}", class="uploadedImg", ascot="#{look._id}", ascot_key="#{key}")
            
      div#overlay
        input(type="text", value="", id="productSearch")

  input(type="submit",value="Save",id="save_button")
